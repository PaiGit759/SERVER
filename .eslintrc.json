{
  "root": true,
  "env": {
    // где будет исполняться наш код
    "node": true,
    "es2021": true,
    "es6": true
  },

  "globals": {
    "$": true,
    "require": true,
    "process": true
  },

  "extends": ["eslint:recommended", "prettier"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },

  "rules": {
    //"prettier/prettier": "error",
    "no-console": "off"
  }
}
